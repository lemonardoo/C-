{
    char name1[41],name2[41],date[41];
    cout<<endl<<"Please input your friend's name:";
    cin>>name1;
    cout<<endl<<"Please input your name:";
    cin>>name2;
    cout<<endl<<"Please input the date:";
    cin>>date;
    cout<<endl<<"========================================"<<endl;
