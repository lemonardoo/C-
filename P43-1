#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    double a,b,c,s,area;
    cout<<"Please input a,b,c=";
    cin>>a>>b>>c;
    if(pow(a, 2)+pow(b, 2)==pow(c, 2))
    {
        s=(a+b+c)/2;
        area=sqrt(s*(s-a)*(s-b)*(s-c));
        cout<<"area="<<area<<endl;
    }
    else cout<<"Error data!"<<endl;
    return 0;
}
